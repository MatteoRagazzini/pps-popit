<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="gameMenu" styleClass="gameMenu" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.GameMenuController">
    <HBox fx:id="inputButtons">
        <ToggleButton fx:id="playButton" mnemonicParsing="false" styleClass="inputButton, playButton" text="Pause" />
        <ToggleButton fx:id="exitButton" mnemonicParsing="false" styleClass="inputButton, exitButton" text="Exit" />
    </HBox>
    <VBox fx:id="gameStatus" styleClass="inputBox" />

    <VBox fx:id="towerDepot" styleClass="inputBox, towerDepot">
        <HBox styleClass="towerDepotTitle">
            <Label text="Towers" />
        </HBox>
    </VBox>
</VBox>
